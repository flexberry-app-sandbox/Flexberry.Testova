<h3 class="ui header">{{t "forms.i-i-s-testova-клиент-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодКлиента
      class=(if (v-get validationModel "кодКлиента" "isInvalid") "error")
      label=(t "forms.i-i-s-testova-клиент-e.кодКлиента-caption")
      data-test-i-i-s-testova-клиент-e-кодКлиента=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодКлиента" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фамилия
      class=(if (v-get validationModel "фамилия" "isInvalid") "error")
      label=(t "forms.i-i-s-testova-клиент-e.фамилия-caption")
      data-test-i-i-s-testova-клиент-e-фамилия=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фамилия" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.имя
      class=(if (v-get validationModel "имя" "isInvalid") "error")
      label=(t "forms.i-i-s-testova-клиент-e.имя-caption")
      data-test-i-i-s-testova-клиент-e-имя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "имя" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.отчество
      class=(if (v-get validationModel "отчество" "isInvalid") "error")
      label=(t "forms.i-i-s-testova-клиент-e.отчество-caption")
      data-test-i-i-s-testova-клиент-e-отчество=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "отчество" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерТелефона
      class=(if (v-get validationModel "номерТелефона" "isInvalid") "error")
      label=(t "forms.i-i-s-testova-клиент-e.номерТелефона-caption")
      data-test-i-i-s-testova-клиент-e-номерТелефона=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерТелефона" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.датаРождения
      class=(if (v-get validationModel "датаРождения" "isInvalid") "error")
      label=(t "forms.i-i-s-testova-клиент-e.датаРождения-caption")
      data-test-i-i-s-testova-клиент-e-датаРождения=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаРождения" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-testova-клиент-e.документы-caption"}}</label>
    {{flexberry-groupedit
      componentName="документыGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.документы
      content=model.документы
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "документы" "isInvalid") "error")
      data-test-i-i-s-testova-клиент-e-документы=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "документы" "message")}}
  </div>
</form>
